---
layout: auth/auth-layout
themeTitle: ModularAdmin
---
<div class="auth-container">
	<div class="card">
		<header class="auth-header">
			<h1 class="auth-title">
				{{> _common/logo/logo}}
				{{themeTitle}}
			</h1>
		</header>
		<div class="auth-content">
			<p class="text-center">登录</p>
			<form id="login-form"  action="/index.html" method="GET" novalidate="">
				<div class="form-group">
					<label for="username" >邮箱</label>
					<input type="email" class="form-control underlined" name="username" id="username" placeholder="请输入您的邮箱地址" required>
				</div>
				<div class="form-group">
					<label for="password" >密码</label>
					<input type="password" class="form-control underlined" name="password" id="password" placeholder="请输入您的密码" required>
				</div>
				<div class="form-group">
					<label for="remember">
						<input class="checkbox" id="remember" type="checkbox">
						<span>记住我</span>
					</label>

					<a href="reset.html" class="forgot-btn pull-right">忘记密码?</a>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-block btn-primary">登录</button>
				</div>
				<div class="form-group">
					<p class="text-muted text-center">如果您还没有帐号? <a href="signup.html">注册</a></p>
				</div>
			</form>
		</div>
	</div>
	<div class="text-center">
		<a href="index.html" class="btn btn-secondary btn-sm">
			<i class="fa fa-arrow-left"></i> 返回仪表盘
		</a>
	</div>
</div>
