<div class="card card-block sameheight-item">
	<div class="title-block">
		<h3 class="title">
			默认 Bootstrap 输入
		</h3>
	</div>
	<form role="form">
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput">输入文本</label>
			<input type="text" class="form-control" id="formGroupExampleInput">
		</fieldset>
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput2">输入密码</label>
			<input type="password" class="form-control" id="formGroupExampleInput2">
		</fieldset>
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput3">占位符输入</label>
			<input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Placeholder text">
		</fieldset>
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput4">禁止输入</label>
			<input type="text" disabled="disabled" class="form-control" id="formGroupExampleInput4" placeholder="Disabled input text">
		</fieldset>
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput5">静态控制器</label>
			<p class="form-control-static" id="formGroupExampleInput5">email@example.com</p>
		</fieldset>
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput6">只读输入</label>
			<input type="text" readonly="readonly" class="form-control" id="formGroupExampleInput6" value="Readonly input text">
		</fieldset>
		<fieldset class="form-group">
			<label class="control-label" for="formGroupExampleInput7">输入区域</label>
			<textarea rows="3" class="form-control"id="formGroupExampleInput7"></textarea>
		</fieldset>
	</form>
</div>