<div class="card card-block sameheight-item">
	<div class="title-block">
		<h3 class="title">
			带下划线的验证输入
		</h3>
	</div>
	<form role="form">
		<div class="form-group has-success">
			<label class="control-label" >成功输入</label>
			<input type="text" class="form-control underlined" >
			<span class="has-success">成功信息</span>
		</div>
		<div class="form-group has-warning">
			<label class="control-label" >警告输入</label>
			<input type="text" class="form-control underlined" >
			<span class="has-warning">警告信息</span>
		</div>
		<div class="form-group has-error">
			<label class="control-label">错误输入</label>
			<input type="text" class="form-control underlined">
			<span class="has-error">错误信息</span>
		</div>
		<div class="form-group has-success  has-feedback">
			<label class="control-label" >成功图标输入</label>
			<input type="text" class="form-control underlined" >
			<span class="fa fa-check form-control-feedback"></span>
		</div>
		<div class="form-group has-warning  has-feedback">
			<label class="control-label" >警告图标输入</label>
			<input type="text" class="form-control underlined" >
			<span class="fa fa-exclamation form-control-feedback"></span>
		</div>
		<div class="form-group has-error  has-feedback">
			<label class="control-label" >错误图标输入</label>
			<input type="text" class="form-control underlined" >
			<span class="fa fa-times form-control-feedback"></span>
		</div>
	</form>
</div>
